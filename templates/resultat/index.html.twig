{% extends 'base.html.twig' %}

{% block title %}Hello MainController!


{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col-md-10 mx-auto mt-5">
<div class="card border-success">
  <div class="card-header">
  Resultats
  </div>
  <div class="card-body">
    <h4 class="card-title center">Concours</h4>
{% if concoursParticiper %}
   <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>rewords</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
            {% for value in concoursParticiper %}
                <tr>
                    <td scope="row">{{ value.id }}</td>
                    <td>{{ value.name }}</td>
                    <td>{{ value.description }}</td>
                    <td>{{ value.rewords }}</td>
                    <td class="success">Ggagner</td>
                </tr>
               {% endfor %}
            </tbody>
       
        {% endif %}

        {% if concoursParticiper == null %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">X</span>
          </button>
          <strong>Pas de chance !! vous n'avez pas gagner .</strong> 
        </div>
        
        <script>
          $(".alert").alert();
        </script>
            
        {% endif %}

  </div>
</div>
        
        
    </div>
</div>
    
</div>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

